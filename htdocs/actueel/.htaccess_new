RewriteEngine On

# Als we naar /actueel/ gaan worden we doorgestuurd naar de mededelingen
RewriteRule ^/?$ /actueel/mededelingen/ [R]

# Sjaarsacties
RewriteRule ^sjaarsacties/?$ sjaarsacties.php

# Eetplan
RewriteRule ^eetplan/$ eetplan.php
RewriteRule ^eetplan/sjaars/([0-9]*) eetplan.php?pheutID=$1
RewriteRule ^eetplan/huis/([0-9]*) eetplan.php?huisID=$1

# Mededelingen tonen
RewriteRule ^mededelingen/?$ mededelingen.php
RewriteRule ^mededelingen/([0-9]+)$ mededelingen.php?mededelingId=$1

# Mededelingen beheer
#RewriteRule ^mededelingen/beheer mededelingen.php?beheer=true
RewriteRule ^mededelingen/verwijderen/([0-9]+) mededelingen.php?mededelingId=$1&actie=verwijderen
RewriteRule ^mededelingen/bewerken/([0-9]+)$ mededelingen.php?mededelingId=$1&actie=bewerken
RewriteRule ^mededelingen/toevoegen$ mededelingen.php?mededelingId=0&actie=bewerken

# Pagina's met tekst
RewriteRule ^owee/? ../pagina.php?naam=owee
RewriteRule ^agenda/? ../pagina.php?naam=agenda