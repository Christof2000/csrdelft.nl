RewriteEngine On

### maaltijden & corvee
RewriteRule ^maaltijden(.*)$		taken.php?module=maaltijden&query=$1 [QSA]
RewriteRule ^corvee(.*)$			taken.php?module=corvee&query=$1 [QSA]

RewriteRule ^oudcorveebeheer/?$ oudcorveebeheer.php
RewriteRule ^oudcorveebeheer/bewerk/([0-9]+)/?$ oudcorveebeheer.php?bewerk=$1
RewriteRule ^oudcorveebeheer/puntenbewerk/([0-9]+)/?$ oudcorveebeheer.php?puntenbewerk=$1
RewriteRule ^oudcorveebeheer/takenbewerk/([0-9]+)/?$ oudcorveebeheer.php?takenbewerk=$1
RewriteRule ^oudcorveebeheer/takenbewerk/([0-9]+)/([0-1])/?$ oudcorveebeheer.php?takenbewerk=$1&filter=$2
RewriteRule ^oudcorveebeheer/verwijder/([0-9]+)/?$ oudcorveebeheer.php?verwijder=$1

# Oude owee redirected
RewriteRule ^owee/?$		/csrindeowee/ [R=301]

# Als we naar /actueel/ gaan worden we doorgestuurd naar de mededelingen
RewriteRule ^/?$ /actueel/mededelingen/ [R]

# Sjaarsacties
RewriteRule ^sjaarsacties/?$ sjaarsacties.php

# Bijbelleesrooster
RewriteRule ^bijbelrooster/$ bijbelrooster.php

# Eetplan
RewriteRule ^eetplan/$ eetplan.php
RewriteRule ^eetplan/sjaars/([0-9]*) eetplan.php?pheutID=$1
RewriteRule ^eetplan/huis/([0-9]*) eetplan.php?huisID=$1

# Pagina's met tekst
RewriteRule ^owee/programma/? ../pagina.php?naam=oweeprogramma
RewriteRule ^owee/? ../pagina.php?naam=owee

#RewriteRule ^agenda/? ../pagina.php?naam=agenda
RewriteRule ^agendaa/? ../pagina.php?naam=agenda