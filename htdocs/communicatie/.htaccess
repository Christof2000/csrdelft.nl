RewriteEngine On

# Forum backwards compatibility
RewriteRule ^forum/?(.*)$	/forum/$1 [QSA,R,L]
# Als we naar /communicatie/ gaan worden we doorgestuurd naar het forum
RewriteRule ^/?(.*)$	/forum/$1 [QSA,R,L]

# Ledenlijst
RewriteRule ^(leden)?lijst/$ lijst.php
RewriteRule ^(leden)?lijst/?(.*)$ lijst.php [QSA]


# Verjaardagen
RewriteRule ^verjaardagen/? verjaardagen.php

# Moten redirecten naar verticalen
RewriteRule ^moten/? verticalen/ [R=301]

# Verticalen
RewriteRule ^verticalen/? verticalen.php

# Profielen
RewriteRule ^profiel/?$ profiel.php
RewriteRule ^profiel/([0-9a-z]+)/?$ profiel.php?uid=$1
RewriteRule ^profiel/([0-9a-z]+)/([a-zA-Z]+)/?$ profiel.php?uid=$1&a=$2 [QSA]
RewriteRule ^profiel/([0-9a-z]+)/([a-zA-Z]+)/([a-zA-Z]+)/?$ profiel.php?uid=$1&a=$2&s=$3 [QSA]

# Oude documentlinks voorlopig doorverwijzen naar de oude ketzer.
RewriteRule ^documenten/neerladen/([0-9]+)/?$ documenten_old/neerladen/$1

# Documentenketzer
RewriteRule ^documenten$ documenten.php?querystring=
RewriteRule ^documenten/(.*)$ documenten.php?querystring=$1 [QSA]

# Pagina's met tekst
RewriteRule ^irc/? ../index.php
RewriteRule ^orientatie/? ../index.php
RewriteRule ^boeken/? ../index.php
RewriteRule ^bedrijven/? ../index.php

# Bibliotheek
RewriteRule ^bibliotheek$ bibliotheek.php?querystring=
RewriteRule ^bibliotheek/(.*)$ bibliotheek.php?querystring=$1 [QSA]
