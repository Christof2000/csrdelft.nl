### Dingen voor de htdocs-root
AddDefaultCharset utf-8
RewriteEngine On

### mod_rewrite-dingen
RewriteRule ^instellingen/?$			instellingen.php
RewriteRule ^pauper/?$				pauper.php
# Pagina
RewriteRule ^pagina/([a-z]+)/bewerken? pagina.php?naam=$1&bewerken=ja
RewriteRule ^pagina/([a-z]+)/? pagina.php?naam=$1

# Vereniging
RewriteRule ^vereniging/?$ 			pagina.php?naam=vereniging
RewriteRule ^vereniging/([a-z]+)/? 	pagina.php?naam=$1

# Contact
RewriteRule ^contact/?$ 			pagina.php?naam=contact
RewriteRule ^contact/([a-z]+)/? 	pagina.php?naam=$1

# heleboel 301's voor terugwaarste compatibiliteit.
RewriteRule ^forum/(.*)$			/communicatie/forum/$1 [R=301]
RewriteRule ^intern/profiel(.*)		/communicatie/profiel$1 [R=301]
RewriteRule ^contact.php$ 			/contact/ [R=301]
RewriteRule ^base.php.*$ 			/ [R=301]
RewriteRule ^nieuws/(.*)$			/actueel/mededelingen/$1 [R=301]

# su
RewriteRule ^su/([0-9a-z]+)/?$ su.php?actie=su&uid=$1
RewriteRule ^endsu/?$ su.php?actie=endSu