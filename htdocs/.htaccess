# Dingen voor de htdocs-root
AddDefaultCharset utf-8
RewriteEngine On

# Tijdelijk OWee redirect(nu niet!)
# RewriteRule ^$ /actueel/owee [NC,R=302,L]

# mod_rewrite-dingen
RewriteRule ^instellingen/?$		instellingen.php [L]
RewriteRule ^pauper/?$				pauper.php [L]

# Dies site
# RewriteRule ^dies/?(.*)$			dies2014/$1 [L]
RewriteRule ^dies/?$				dies2014 [R=301, L]

# maaltijden & corvee
RewriteRule ^maaltijden/?(.*)$		taken.php?uri=maaltijden/$1 [L]
RewriteRule ^corvee/?(.*)$			taken.php?uri=corvee/$1 [L]

# menubeheer
RewriteRule ^menubeheer/?(.*)$		menubeheer.php?uri=$1 [QSA,L]

# SocCie
RewriteRule ^soccie/?$				soccie/index.php [L]

# leden - interne homepage
RewriteRule ^leden/?$				leden.php [L]

# Pagina
RewriteRule ^pagina/([a-z]+)/bewerken?	pagina.php?naam=$1&bewerken=ja [L]
RewriteRule ^pagina/([a-z]+)/?		pagina.php?naam=$1 [L]

# Vereniging
RewriteRule ^vereniging/?$ 			pagina.php?naam=vereniging [L]
RewriteRule ^vereniging/([a-z]+)/? 	pagina.php?naam=$1 [L]

# Contact
RewriteRule ^contact/([a-z]+)/? 	pagina.php?naam=$1 [L]
RewriteRule ^contact/?$ 			pagina.php?naam=contact [L]

# KoSS
RewriteRule ^koss/?$ 				pagina/koss/ [L]

# C.S.R. in de OWee
RewriteRule ^csrindeowee/?$ 		pagina/csrindeowee/ [L]

# Lid Worden
RewriteRule ^lidworden/?$ 			lidworden.php [L]

# heleboel 301's voor terugwaarste compatibiliteit.
RewriteRule ^forum/(.*)$			/communicatie/forum/$1 [R=301,L]
RewriteRule ^intern/profiel(.*)		/communicatie/profiel$1 [R=301,L]
RewriteRule ^contact.php$ 			/contact/ [R=301,L]
RewriteRule ^base.php.*$ 			/ [R=301,L]
RewriteRule ^nieuws/(.*)$			/actueel/mededelingen/$1 [R=301,L]

# su
RewriteRule ^su/([0-9a-z]+)/?$		su.php?actie=su&uid=$1 [L]
RewriteRule ^endsu/?$				su.php?actie=endSu [L]

# Facebook link voor BINAS voor de Owee(Cie)
RewriteRule ^facebook/?$			http://www.facebook.com/group.php?gid=10294513917&ref=ts [L]

# Account aanvragen
RewriteRule ^account-aanvragen/?$	pagina.php?naam=accountaanvragen [L]
