AddDefaultCharset utf-8
RewriteEngine On

## forum backwards compatibility
RewriteRule ^communicatie/forum/rss/([0-9a-z]*).xml		/forum/rss?validate_token=$1 [R]
RewriteRule ^communicatie/forum/rss.xml$				/forum/rss [R]
RewriteRule ^communicatie/forum/categorie/laatste/?$	/forum/recent [R]
RewriteRule ^communicatie/forum/categorie/?$			/forumdeel/$1 [R]
RewriteRule ^communicatie/forum/onderwerp/?$			/forumdraad/$1 [R]
RewriteRule ^communicatie/forum/reactie/?$				/forumpost/$1 [R]

RewriteRule ^nieuws/?$			/actueel/mededelingen/$1 [L]
RewriteRule ^facebook/?			http://www.facebook.com/group.php?gid=10294513917&ref=ts [L]
RewriteRule ^pauper				pauper.php [L]

RewriteRule ^forum				index.php?c=Forum [L]
RewriteRule ^agenda				index.php?c=Agenda [L]
RewriteRule ^maaltijden			index.php?c=TakenModule [L]
RewriteRule ^corvee				index.php?c=TakenModule [L]
RewriteRule ^instellingenbeheer	index.php?c=InstellingenBeheer [L]
RewriteRule ^instellingen		index.php?c=LidInstellingen [L]
RewriteRule ^menubeheer			index.php?c=MenuBeheer [L]

RewriteRule ^su/([0-9a-z]+)/?$	su.php?actie=su&uid=$1 [L]
RewriteRule ^endsu				su.php?actie=endSu [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^					index.php [L]